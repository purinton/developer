{
    "name": "@purinton/developer",
    "type": "module",
    "version": "1.0.23",
    "description": "A customizable Model Context Protocol (MCP) server for AI, automation, and developer tool APIs. Includes dynamic tool loading, multi-language script execution, and remote system integration.",
    "main": "developer.mjs",
    "scripts": {
        "start": "node developer.mjs",
        "test": "npx --node-options=\"--experimental-vm-modules --no-warnings\" jest --detectOpenHandles --silent"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/purinton/developer.git"
    },
    "keywords": [
        "developer",
        "nodejs",
        "MCP",
        "automation",
        "AI tools",
        "tool server",
        "remote scripting",
        "multi-language",
        "python",
        "php",
        "javascript",
        "ssh",
        "sql"
    ],
    "author": "Russell Purinton <russell@purinton.us>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/purinton/developer/issues"
    },
    "homepage": "https://github.com/purinton/developer#readme",
    "devDependencies": {
        "jest": "^30.0.4"
    },
    "jest": {
        "testEnvironment": "node",
        "testMatch": [
            "**/?(*.)+(spec|test).[jt]s?(x)",
            "**/?(*.)+(spec|test).mjs",
            "**/?(*.)+(spec|test).cjs"
        ]
    },
    "dependencies": {
        "@purinton/common": "^1.0.17",
        "@purinton/mcp-server": "^1.0.22",
        "@purinton/mysql": "^1.0.10",
        "dotenv": "^17.2.0",
        "ssh2": "^1.16.0"
    }
}